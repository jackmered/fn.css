{
  "name": "fn.css",
  "version": "4.0.0",
  "main": "dist/fn.css",
  "style": "dist/fn.css",
  "license": "MIT",
  "repository": "jackmered/fn.css",
  "devDependencies": {
    "autoprefixer": "^10.3.4",
    "css-mqpacker": "^7.0.0",
    "csso": "^4.2.0",
    "npm": "^7.22.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.3.6",
    "postcss-cli": "^8.3.1",
    "postcss-combine-duplicated-selectors": "^10.0.3",
    "rimraf": "^3.0.2",
    "sass": "^1.39.0",
    "style-perfectionist": "^0.0.1",
    "stylelint": "^13.13.1",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-scss": "^3.20.1"
  },
  "scripts": {
    "start": "npm-run-all lint clean build minify",
    "build": "npm-run-all scss postcss",
    "scss": "sass scss/fn.scss dist/fn.css",
    "postcss": "postcss --replace \"dist/*.css\"",
    "clean": "rimraf dist",
    "lint": "stylelint scss/*.scss",
    "minify": "csso dist/fn.css -o dist/fn.min.css -s file"
  },
  "browserslist": [
    "defaults"
  ],
  "prettier": {
    "trailingComma": "all"
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {},
      "css-mqpacker": {},
      "postcss-combine-duplicated-selectors": {},
      "style-perfectionist": {
        "cascade": false,
        "indentSize": 2,
        "trimLeadingZero": false,
        "maxSelectorLength": 1
      }
    }
  },
  "stylelint": {
    "extends": "stylelint-config-prettier",
    "plugins": [
      "stylelint-scss"
    ]
  }
}
